BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            # text input
            id: input_number
            font_size: 48
            multiline: False
            # This event is when the user enters text (and presses Enter)
            on_text_validate: app.handle_calculate(input_number.text)
            size_hint_x: 0.8
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                # up button
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                # down button
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    BoxLayout:
        orientation: 'vertical'
        Button:
            # calculate button
            text: 'Convert miles to km'
            on_press: app.handle_calculate(input_number.text)
        Label:
            # output conversion label
            id: output_label